<% LayoutUtils.addMeta({ property:"og:image:url", content: SocialService.getShareUrl() + "/assets/jason/images/map.jpg" }); %>
<% LayoutUtils.addMeta({ property:"og:image:type", content:"image/png" }); %>
<% LayoutUtils.addMeta({ property:"og:image:width", content:"553" }); %>
<% LayoutUtils.addMeta({ property:"og:image:height", content:"457" }); %>
<% LayoutUtils.addMeta({ property:"og:title", content:"捷陞專業自動門" }); %>
<% LayoutUtils.addMeta({ property:"og:description", content:"聯絡我們" }); %>
<% LayoutUtils.addMeta({ property:"og:type", content:"website" }); %>

<% LayoutUtils.addStylesheets('/assets/jason/page/index/index.css'); %>
<% LayoutUtils.addStylesheets('/assets/jason/page/contact/contact.css'); %>
<% LayoutUtils.addScripts('/assets/simple/js/plugin/validation.js'); %>


<div class="container body">

<% include ../../partials/banner.ejs %>

  <div class="row">
    <div class="col-md-9 col-md-push-3 content">

      <article>
        <header class="article-title">
          <h1 id="contactForm">聯絡表單</h2>
        </header>
        <form class="contact-form" method="post" action="/api/contact">
          <div class="form-group">
            <label for="exampleInputEmail1">姓名</label>
            <input type="text" name="name" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">電子郵件</label>
            <input type="email" name="email" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">電話</label>
            <input type="tel" name="phone" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">內容</label>
            <textarea class="form-control" name="content" rows="5"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" style="margin-right:0.6em">送出</button>
          <button type="reset" class="btn btn-default">重填</button>
        </form>
      </article>

      <article style="margin-top:6em;">
        <header class="article-title">
          <h1 id="contactInfo">聯絡方式</h2>
        </header>
        <div class="row contact-info">
          <div class="col-sm-2 contact-info-icon">
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
          </div>
          <div class="col-sm-9 contact-info-content">
            <h1>電子郵件</h1>
            <p>
              您可將您的意見或問題寄給我們的技術人員。
            </p>
            <a href="mailto:autodoor@ms95.url.com.tw">autodoor@ms95.url.com.tw</a>
          </div>
        </div>
        <div class="row contact-info">
          <div class="col-sm-2 contact-info-icon">
            <i class="fa fa-phone" aria-hidden="true"></i>
          </div>
          <div class="col-sm-10 contact-info-content">
            <h1>電話聯絡</h1>
            <p>
              您可以於我們的上班時間內星期一~六;以電話與我們連絡我們會有相關服務人員回答您的問題。
            </p>
            <a href="tel:+886422467161">(04)2246-7160</a>
          </div>
        </div>
        <div class="row contact-info">
          <div class="col-sm-2 contact-info-icon">
            <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
          </div>
          <div class="col-sm-10 contact-info-content">
            <h1>傳真文件</h1>
            <p>
              假如您需要以傳真方式與我們連絡，請註明您的姓名連絡資料及相關事項
            </p>
            <a href="tel:+886422467392">(04)2246-7392</a>
          </div>
        </div>
        <div class="row contact-info">
          <div class="col-sm-2 contact-info-icon">
            <i class="fa fa-map-signs" aria-hidden="true"></i>
          </div>
          <div class="col-sm-10 contact-info-content">
            <h1>郵寄文件</h1>
            <p>
              假如您需要以郵局郵寄方式與我們連絡，請將相關資料郵寄至下列地址：
            </p>
            <span style="color: #337ab7;font-size: 1.3em;">郵遞區號：406 台中市北屯區修齊街156號 捷陞專業自動門工程行</span>
          </div>
        </div>

      </article>
    </div>

    <div class="col-md-3 col-md-pull-9">
      <div class="side-menu" id="sticker">
        <ul class="list-group">
          <li>
            <h3 class="list-group-item list-group-item-title">
              聯絡我們
              <small>Contact Us</small>
            </h3>
          </li>
          <li>
            <a data-link="contactForm" href="/product/group/0/page/1" class="list-group-item">聯絡表單</a>
          </li>
          <li>
            <a data-link="contactInfo" href="/product/group/0/page/1" class="list-group-item">聯絡方式</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <% include ../../partials/footer.ejs %>

</div>

<script>
  var formInfo = '<%= info %>';
</script>

<% LayoutUtils.addScriptBlock(`
jQuery(document).ready(function() {
  if (formInfo) {
    swal('傳送成功', '我們將會處理您的訊息', 'success')
  }

  $('.side-menu li a').click(function(e){
    e.preventDefault();
    $('html, body').animate({
      scrollTop: $('#'+$(this).data('link')).offset().top - 55
    }, 500);
  });

  $(".contact-form").validate({
    rules: {
      name: {
        required: true
      },
      email: {
        required: true,
        email: true,
      },
      phone: {
        required: true,
      },
      content: {
        required: true
      },

    },
    messages: {
      name: {
        required: "請輸入姓名"
      },
      email: {
        required: "請輸入電子郵件",
        email: "電子郵件格式錯誤，請再次確認",
      },
      phone: {
        required: "請輸入電話",
      },
      content: {
        required: "請輸入內容"
      },
    }
  });
});
`); %>
